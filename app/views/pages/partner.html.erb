<div class="container">

  <div class="row">
    <h1 class="text-center">
      <p><%= @user.first_name %>'s dashboard </p>
    </h1>

    <% if @user.status %>
      <h2 class="text-center">Welcome partner !</h2>
    <% else %>
      <p>Oups, you're no partner</p>
      <% end%>
  </div>

  <div class="row">
    <% if @user.places.first.meetings.first.blank? %>
      <h2><p> No booking </p></h2>
    <% elsif @count_meetings == 1 %>
      <h2> A booking to confirm (<%= @count_meetings %>)</h2>
    <% else %>
      <h2> Bookings to confirm (<%= @count_meetings %>)</h2>
    <% end %>
  </div>

  <div class="row">
    <% @user.places.each do |place| %>
      <% if place.meetings.blank? %>
        <p>No booking to confirm</p>
      <% else %>
        <% place.meetings.each do |meeting| %>

    <ul class="text_inline">
        <li>
          <p><strong>Received the </strong><%= meeting.created_at.strftime("%B %d %Y")%> <strong> at </strong> <%= meeting.created_at.strftime("%H %M") %></p>
          <div class="col-md-3">
          <p><%= place.name %></p>
          <p> 2 personnes </p>
        </div>
      </li>
      <li>
        <div>
          <p><strong>Booking date</strong> <%= meeting.date.strftime("%B %d %Y")%></p>
          <p><strong>Booking time</strong> <%= meeting.date.strftime("%H %M")%></p>
        </div>
      </li>
      <li>
      <div class="col-md-3">
          <p><%= link_to "Valider", partner_path(@user) %></p>
      </div>
      </li>
    </ul>
  </div>
        <% end %>
      <% end %>
    <% end %>


  <div class="row">
    <h2>Booking confirmed (compteur bookings)</h2>
  </div>




  <div class="row">

    <% if @places.nil? %>
      <p> No place to show </p>
    <% elsif @count_places == 1 %>
      <h2>My place (<%= @count_places %>)</h2>
    <% else %>
      <h2>My places (<%= @count_places %>)</h2>
    <% end %>

    <% if !@places.nil? %>
      <% @user.places.each do |place| %>
      <h4><strong><%= place.name %></strong></h4>

    <div class="col-md-3">
      <div class="place-picture">
        <img src="http://res.cloudinary.com/diqequpgu/image/upload/c_scale,h_285,q_100,w_674/v1472165522/photo_place_segabm.jpg" style="position: relative; width: 100%;" alt=""></img>
      </div>
      <p><%= link_to "Delete", place_path(place), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %> &nbsp; <%= link_to "Edit", edit_place_path(place) %></p>
    </div>

    <ul class="text_inline">
      <div class="col-md-4">
        <li>
          <p><strong>Address: </strong><%= place.address %></p>
          <p><strong>Description: </strong><%= place.description %></p>
          <p><strong>Phone number: </strong><%= place.phone_number %></p>
          <p><strong>Type: </strong> <%= place.type_partner %></p>
        </li>
      </div>
      <div class="col-md-4">
        <li>
            <p><strong>Total pax: </strong> <%= place.pax %></p>
            <p><strong>Available Pax: </strong> </p>
            </br>
        </li>
      </div>
    </ul>
  </div>
      <% end %>
    <% end %>
  </br>





  <div class="text-center">
    <p><%= link_to "Suggest a new place", new_place_path, class: "btn btn-default" %></p>
  </div>

</div>


