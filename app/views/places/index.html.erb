<div class="background">
  <div class="container">
    <div class="row">
      <div class="text-center title">
        <h1> Places </h1>
      </div>
    </div>

    <div class="row ">
      <% @places.each do |place| %>
        <div class="col-xs-4">


          <div class="card image" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('http://res.cloudinary.com/diqequpgu/image/upload/v1472165522/photo_place_segabm.jpg');">
              <div class="card-description">
                <% if current_user.status %>
                  <h2><%= link_to place.name, place_path(place), style: 'color:blue;' %></h2>
                <% else %>
                  <h2><%= link_to place.name, connection_meeting_place_path(@connection, @meeting, place)%></h2>
                <% end %>
                <p><%= place.type_partner %></p>
              </div>
              <!-- <a class="card-link" href="#" ></a> -->
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
