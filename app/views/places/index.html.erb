<div class="text-center">
  <h1> Places </h1>
</div>

<div class="container">
  <div class="row">
    <div class="card">

        <% @places.each do |place| %>


      <div class="col-md-6">
      <ul class="list-inline">
        <li>
         <img src="http://res.cloudinary.com/diqequpgu/image/upload/c_scale,h_288,w_296/v1472169872/place_photo_czwuap.jpg" alt=""></img>
        </li>

        <li>
          <% if current_user.status %>
            <p><%= link_to place.name, place_path(place), style: 'color:blue;' %></p>
          <% else %>
            <h2><%= link_to place.name, connection_meeting_place_path(@connection, @meeting, place)%></h2>
          <% end %>
            <p><strong>Type: </strong> <%= place.type_partner %></p>
            <p><strong>Address: </strong><%= place.address %></p>
            <p><strong>Phone number: </strong><%= place.phone_number %></p>
        </li>
      </div>
</ul>
        <% end %>




      </div>
    </div>
  </div>



