
    <div class="total-wrap">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3">
            <%= render "shared/navbar" %>
              <div class="profil-wrapper">
                <div class="profile-bio">
                   <% if @meeting.connection.guest != current_user%>
                        <% if @meeting.connection.guest.photo? %>
                        <%= cl_image_tag @meeting.connection.guest.photo.path, gravity: "face", width: 100, height: 100, :crop=>"thumb", radius: "max" %>
                        <% else %>
                          <%= image_tag "http://placehold.it/100x100" %>
                        <% end %>

                        <h3> <%= @meeting.connection.guest.first_name%> <%=@meeting.connection.guest.last_name %> </h3>

                      <% elsif @meeting.connection.host != current_user %>
                       <% if @meeting.connection.guest.photo? %>
                        <%= cl_image_tag @meeting.connection.host.photo.path, gravity: "face", width: 100, height: 100, :crop=>"thumb", radius: "max" %>
                        <% else %>
                          <%= image_tag "http://placehold.it/100x100" %>
                        <% end %>

                        <h3> <%= @meeting.connection.guest.first_name%> <%=@meeting.connection.guest.last_name %> </h3>
                <% end %>
            </div>
            <div class="profile-interests">
              <% if @meeting.connection.guest != current_user %>
                <span class="bio-title"> <%= @meeting.connection.guest.first_name%>'s bio </span>
                <div class="profile-skills">
                  <div class="skills-icons">
                  <%= truncate(@meeting.connection.guest.bio, length: 105) %>
                  </div>
                </div>
                  <% elsif @meeting.connection.host != current_user %>
                <span class="bio-title"> <%= @meeting.connection.host.first_name%>'s bio </span>
                <div class="profile-skills">
                  <div class="skills-icons">
                  <%= truncate(@meeting.connection.host.bio, length: 105) %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="profile-details">
            <div class="profile-interests">
                <div class="skills-icons">
                  <% if @meeting.connection.guest != current_user%>
                     <span class="bio-title"> <%= @meeting.connection.guest.first_name%>'s interests</span>
                      <div class="profile-skills">
                    <% s =  @meeting.connection.guest.skills.shuffle %>
                    <% skills = s.sample(14) %>
                    <% skills.each do |skill| %>
                      <%= image_tag(skill.icon) %>
                    <% end %>
                 <% elsif @meeting.connection.guest != current_user%>
                    <% s =  @meeting.connection.guest.skills.shuffle %>
                    <span class="bio-title"> <%= @meeting.connection.guest.first_name%>'s interests</span>
                    <div class="profile-skills">
                    <% skills = s.sample(14) %>
                    <% skills.each do |skill| %>
                      <%= image_tag(skill.icon) %>
                    <% end %>
                  <% end%>
                  </div>
                </div>
              </div>
            </div>
            <hr>
      </div>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-6">
                <div class="suggestion-wrapper">
                  <div class="suggestion-content">
                    <h3 id="hiding-bar">
                      MESSAGES
                    </h3>
                    <div class="underspace"></div>
                    <%= render 'shared/message_row' %>
                  </div>
              </div>
            </div>
          <div class="col-md-6">
             <h1>ORGANISATEUR</h1>
          <div class="profile-workplace">
              <span class="bio-title">Our Meeting</span>
                  <% if @meeting.place %>
                    <p>Place : <%= @meeting.place.name %></p>
                    <br>
                    <p>Place : <%= @meeting.date.strftime('%m/%d/%Y %I:%M %p') %></p>
                    <div class="modal fade left">
                    <%= link_to "Choise a other places", connection_meeting_places_path(@connection, @meeting) %>
                        <br>
                    </div>
                    <% else %>
                    <%= link_to "Choise places", connection_meeting_places_path(@connection, @meeting) %>
                    <% end %>
                  </div>


          </div>
              <div class="col-md-12">
               <h1> REVIEW </h1>
              <% if @meeting.date && @meeting.date < DateTime.now %>
                <!-- Reviews -->
                <%= render 'reviews' %>
                <!-- Finalize -->
                <% if @connection.status == "valid" %>
                  <%= render "form_finalize_status", value: "connected" %>
                  <%= render "form_finalize_status", value: "refused" %>
                <% elsif @connection.status == "connected" %>
                  <%= render "form_finalize_status", value: "refused" %>
                <% end %>
              <% end %>
            </div>
          </div>




        </div>
    </div>
  </div>
</div>







